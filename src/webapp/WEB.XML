<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Passenger Servlet -->
    <servlet>
        <servlet-name>PassengerServlet</servlet-name>
        <servlet-class>org.airlineReservationSystem.servlet.PassengerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PassengerServlet</servlet-name>
        <url-pattern>/passenger</url-pattern>
    </servlet-mapping>

    <!-- Set PassengerServlet as the default servlet if desired -->
    <servlet-mapping>
        <servlet-name>PassengerServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- Airport Servlet -->
    <servlet>
        <servlet-name>AirportServlet</servlet-name>
        <servlet-class>org.airlineReservationSystem.servlet.AirportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AirportServlet</servlet-name>
        <url-pattern>/airport</url-pattern>
    </servlet-mapping>

    <!-- Flight Servlet -->
    <servlet>
        <servlet-name>FlightServlet</servlet-name>
        <servlet-class>org.airlineReservationSystem.servlet.FlightServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FlightServlet</servlet-name>
        <url-pattern>/flight</url-pattern>
    </servlet-mapping>

    <!-- Reservation Servlet -->
    <servlet>
        <servlet-name>ReservationServlet</servlet-name>
        <servlet-class>org.airlineReservationSystem.servlet.ReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationServlet</servlet-name>
        <url-pattern>/reservation</url-pattern>
    </servlet-mapping>

    <!-- Ticket Servlet -->
    <servlet>
        <servlet-name>TicketServlet</servlet-name>
        <servlet-class>org.airlineReservationSystem.servlet.TicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketServlet</servlet-name>
        <url-pattern>/ticket</url-pattern>
    </servlet-mapping>

    <!-- Payment Servlet -->
    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>org.airlineReservationSystem.servlet.PaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
</web-app>